<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_doctor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titlePerfilDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Perfil Doctor"
                    android:textColor="#198eb6"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/regresar"
                    android:layout_width="19dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="40dp"
                    android:clickable="true"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    app:layout_constraintBottom_toBottomOf="@id/titlePerfilDoctor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/titlePerfilDoctor" />

                <ImageView
                    android:id="@+id/fotoDoctor"
                    android:layout_width="138dp"
                    android:layout_height="138dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="@id/regresar"
                    app:layout_constraintTop_toBottomOf="@id/titlePerfilDoctor"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/nombreDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Dr. Monsieur Juarez"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/fotoDoctor"
                    app:layout_constraintTop_toTopOf="@id/fotoDoctor" />

                <TextView
                    android:id="@+id/genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Hombre"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/fotoDoctor"
                    app:layout_constraintTop_toBottomOf="@id/nombreDoctor" />

                <TextView
                    android:id="@+id/correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="mailto:etienne.nguyen@example.com"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@id/fotoDoctor"
                    app:layout_constraintTop_toBottomOf="@id/genero" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="angryfish444"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/fotoDoctor"
                    app:layout_constraintStart_toStartOf="@id/fotoDoctor"
                    app:layout_constraintTop_toBottomOf="@id/fotoDoctor" />

                <TextView
                    android:id="@+id/costolabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Costo"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/fotoDoctor"
                    app:layout_constraintTop_toBottomOf="@id/correo" />

                <TextView
                    android:id="@+id/costo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20.1dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:text="S/ 165.00"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/costolabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/costolabel" />

                <TextView
                    android:id="@+id/labelUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="47dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Ubicación"
                    android:textColor="#198eb6"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/username" />

                <TextView
                    android:id="@+id/labelEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="53dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Edad"
                    android:textColor="#198eb6"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelUbicacion" />

                <TextView
                    android:id="@+id/labelTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="53dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Teléfono"
                    android:textColor="#198eb6"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelEdad" />

                <TextView
                    android:id="@+id/labelNacionalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="40dp"
                    android:layout_marginTop="53dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Nacionalidad"
                    android:textColor="#198eb6"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTelefono" />

                <TextView
                    android:id="@+id/nacionalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="AU"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/labelNacionalidad" />

                <TextView
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="0472-492-054"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintTop_toBottomOf="@id/labelTelefono"
                    tools:layout_editor_absoluteX="-35dp" />

                <TextView
                    android:id="@+id/edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="50"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelEdad" />


                <Button
                    android:id="@+id/button3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="650dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:text="Agendar Cita"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/averia_sans_libre_light"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Australia - Northern Territory - Warrnambool"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelUbicacion" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>